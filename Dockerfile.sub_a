FROM python:3.6-alpine

WORKDIR /app
# RUN apk update && apk upgrade
RUN apk add --no-cache py3-pip\
                        python3-dev \
                        gcc \
                        libc-dev \
                        musl-dev \
                        g++ \
    && rm -rf /var/cache/apk/*

COPY requirements.txt .
RUN pip install -r requirements.txt 
COPY sub_app_a sub_app_a


WORKDIR /app/sub_app_a

CMD ["python", "app.py"]
